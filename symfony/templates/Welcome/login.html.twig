{% extends 'base.html.twig' %}

{% block title %}Welcome in our room locations{% endblock %}

{% block body %}
    <style>
        body {
            margin: 0;
        }
        .navbar {
            margin: 0;
            font: 18px/1.5 sans-serif;
            background: #5eb5e0;
            list-style: none;
            display: flex;
            flex-direction: row;
            justify-content: end;
        }
        li {
            padding-left: 15px;
            padding-right: 15px;
            padding-top: 2px;
        }
        a {
            text-decoration: none;
        }
        .welcome-page {
            width: 100%;
        }
        .welcome-page code { background: #F5F5F5;}
        .welcome-body-page {
            padding-left: 10px;
        }
        .welcome-body-page h1 {
            text-align: center;
        }
    </style>
    <div class="welcome-page">
        <ul class="navbar">
            <li>Welcome, new user</li>
            <li><a href="{{ path('welcome') }}">Home</a></li>
        </ul>
        <div class="welcome-body-page">
            <h1> Welcome to our Room Location</h1>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{ path('login') }}" method="post">
                <label for="email">Email: </label>
                <input type="email" id="email" name="_username" value="{{ last_email }}" />

                <label for="password">Password: </label>
                <input type="password" id="password" name="_password" />

                <input type="hidden" name="_target_path" value="{{ 'welcome_connected' }}" />
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <button type="submit">Log in</button>
            </form>
        </div>
    </div>
{% endblock %}
